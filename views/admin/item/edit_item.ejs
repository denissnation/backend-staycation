<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" value="<%= item.title %>" name="title" required>
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input type="number" class="form-control" value="<%= item.price %>" name="price" required>
                </div>
                <div class="form-group">
                    <label>City</label>
                    <input type="text" class="form-control" value="<%= item.city %>" name="city" required>
                </div>
                <div class="form-group ">
                    <label>Category</label>
                    <select name="categoryId" class="form-control">
                        <option value="<%= item.categoryId._id %>">-- <%= item.categoryId.name %> --</option>
                        <% for(let i = 0; i < category.length; i ++ ) {%>
                            <option value="<%= category[i].id %>"><%= category[i].name %></option>
                        <%} %>
                        
                    </select>
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="file" class="form-control" name="imageUrl" multiple>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" name="desc" id="" cols="30" rows="10"><%= item.description %></textarea>
                </div>
                
                
                    <button type="submit" class="btn btn-primary">Add</button>
                
            </form>
        </div>
    </div>
</div>