    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit bank</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
        <form action="/admin/bank?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="modal-body">
                <div class="form-group">
                <label>Nama Bank</label>
                <input type="text" class="form-control nameBank" name="nameBank" required>
                </div>
                <div class="form-group">
                <label>Nomor Rekening</label>
                <input type="text" class="form-control nomorRekening" name="nomorRekening" required>
                </div>
                <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control name" name="name" required>
                </div>
