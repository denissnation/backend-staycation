<!-- Modal -->
<div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add bank</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
        <form action="/admin/bank" method="POST" enctype="multipart/form-data">
            <div class="modal-body">
                <div class="form-group">
                <label>Nama Bank</label>
                <input type="text" class="form-control" name="nameBank" required>
                </div>
                <div class="form-group">
                <label>Nomor Rekening</label>
                <input type="text" class="form-control" name="nomorRekening" required>
                </div>
                <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" name="name" required>
                </div>
                <div class="form-group">
                <label>Image</label>
                <input type="file" class="form-control" name="imageUrl" required>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
    </div>
</div>